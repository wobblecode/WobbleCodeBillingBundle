          <li class="active">
            <a href="#all" data-filter="searchFilter" data-query="">
            <span data-datagrid-count="all" class="badge badge-default pull-right">0</span>
            {{ 'WobbleCodeBilling.view.User.Invoice.index.filter.pill.all'|trans }}
