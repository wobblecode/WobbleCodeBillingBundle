{% extends 'WobbleCodeBillingBundle::layout.html.twig' %}

{% block app_content_title %}
  {{ 'WobbleCodeBilling.view.User.Invoice.index.title'|trans }}
{% endblock %}

{% block head_inline_styles %}
{{ parent() }}
<style type="text/css">

  .select-all-header-cell {
    width: 36px;
  }

  .col-id {
    width: 54px !important;
  }

  .col-date {
    width: 110px;
    text-align: left;
  }

  .col-amount {
    width: 90px;
