{% extends 'WobbleCodeAdminBundle::layout.html.twig' %}

{% block app_content_title %}
  {{ 'WobbleCodeBilling.view.Admin.InvoiceStatement.new.title'|trans }}
{% endblock %}

{% block app_content_content %}
  <div class="row">
    <div class="col-sm-7">
      <p class="lead"> {{ 'WobbleCodeBilling.view.Admin.InvoiceStatement.new.subtitle'|trans }}</p>

      <form action="{{ path('admin_billing_invoice-statement_create', {'invoice': invoice.id }) }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}

        <hr/>
        <button class="btn btn-primary" type="submit">{{ 'WobbleCodeBilling.view.Admin.InvoiceStatement.new.button.create'|trans }}</button>
        <a class="btn btn-link" href="{{ path('admin_billing_invoice_show', {'id': invoice.id }) }}">
          {{ 'WobbleCodeBilling.view.Admin.InvoiceStatement.new.link.back'|trans }}
        </a>
      </form>

    </div>
  </div>
{% endblock %}
