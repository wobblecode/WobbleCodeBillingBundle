{% extends 'WobbleCodeAdminBundle::layout.html.twig' %}

{% block app_content_title %}
  {{ 'WobbleCodeBilling.view.Admin.AccountStatement.show.title'|trans({'%id%': entity.id}) }}
{% endblock %}

{% block app_content_content %}
<div class="row">

  <div class="col-md-4 col-md-push-8">
    <ul class="list-group list-flat">
      <li class="list-group-item list-title">
        <h5>{{ "common.metadata.title"|trans }}</h5>
      </li>
      <li class="list-group-item">{{ "common.metadata.created_at"|trans }} <span data-toggle="tooltip" title="{{ entity.createdAt|date('Y-m-d H:i:s') }}">{{ entity.createdAt|date('Y-m-d') }}</span></li>
       {% if entity.updatedAt %} 
      <li class="list-group-item">{{ "common.metadata.updated_at"|trans }} <span data-toggle="tooltip" title="{{ entity.updatedAt|date('Y-m-d H:i:s') }}">{{ entity.updatedAt|date('Y-m-d') }}</span></li>
      {% endif %}             {% if entity.createdBy %} 
      <li class="list-group-item">{{ "common.metadata.created_by"|trans }} {{ entity.createdBy.username }}</li>
      {% endif %}
       {% if entity.updatedBy %} 
      <li class="list-group-item">{{ "common.metadata.updated_by"|trans }} {{ entity.updatedBy.username }}</li>
      {% endif %}    </ul>
  </div>

  <div class="col-md-8 col-md-pull-4">
    <p class="lead">{{ 'WobbleCodeBilling.view.Admin.AccountStatement.show.subtitle'|trans({'%id%': entity.id}) }}</p>
      <ul class="nav nav-tabs">
        <li class="active"><a href="#general" data-toggle="tab">{{ "common.view.show.general.tab"|trans }}</a></li>
                <li class=""><a href="#actions" data-toggle="tab">{{ "common.view.show.actions.tab"|trans }}</a></li>
      </ul>

      <div class="tab-content">

        <div class="tab-pane fade active in" id="general">
          <div class="table-responsive">
            <table class="table table-list">
              <tbody>
              <tr>
                  <th>{{ 'WobbleCodeBilling.view.Admin.AccountStatement.show.field.id'|trans }}</th><td>{{ entity.id }}</td>                </tr>
              <tr>
                  <th>{{ 'WobbleCodeBilling.view.Admin.AccountStatement.show.field.title'|trans }}</th><td>{{ entity.title }}</td>                </tr>
              <tr>
                  <th>{{ 'WobbleCodeBilling.view.Admin.AccountStatement.show.field.hash'|trans }}</th><td>{{ entity.hash }}</td>                </tr>
              <tr>
                  <th>{{ 'WobbleCodeBilling.view.Admin.AccountStatement.show.field.type'|trans }}</th><td>{{ entity.type }}</td>                </tr>
              <tr>
                  <th>{{ 'WobbleCodeBilling.view.Admin.AccountStatement.show.field.description'|trans }}</th><td>{{ entity.description }}</td>                </tr>
              <tr>
                  <th>{{ 'WobbleCodeBilling.view.Admin.AccountStatement.show.field.amount'|trans }}</th><td>{{ entity.amount }}</td>                </tr>
              <tr>
                  <th>{{ 'WobbleCodeBilling.view.Admin.AccountStatement.show.field.effectiveAt'|trans }}</th><td>
                     {% if entity.effectiveAt %} 
                      {{ entity.effectiveAt|date('Y-m-d H:i:s') }}
                    {% else %}
                      <span class="text-muted">n/a</span>
                    {% endif %}
                  </td>                </tr>
              <tr>
                  <th>{{ 'WobbleCodeBilling.view.Admin.AccountStatement.show.field.createdAt'|trans }}</th><td>
                     {% if entity.createdAt %} 
                      {{ entity.createdAt|date('Y-m-d H:i:s') }}
                    {% else %}
                      <span class="text-muted">n/a</span>
                    {% endif %}
                  </td>                </tr>
              <tr>
                  <th>{{ 'WobbleCodeBilling.view.Admin.AccountStatement.show.field.updatedAt'|trans }}</th><td>
                     {% if entity.updatedAt %} 
                      {{ entity.updatedAt|date('Y-m-d H:i:s') }}
                    {% else %}
                      <span class="text-muted">n/a</span>
                    {% endif %}
                  </td>                </tr>
              </tbody>
            </table>
          </div>
          <hr/>

          <a class="btn btn-primary" href="{{ path('admin_billing_account-statement_edit', { 'id': entity.id }) }}">{{ 'WobbleCodeBilling.view.Admin.AccountStatement.show.button.edit'|trans }}</a>
          <a class="btn btn-link" href="{{ path('admin_billing_account-statement') }}">
            {{ 'WobbleCodeBilling.view.Admin.AccountStatement.show.link.back'|trans }}
          </a>

          <button onclick="$('#form_delete_{{ delete_form.vars.name  }}').submit();" class="btn btn-danger pull-right" type="submit">{{ 'WobbleCodeBilling.view.Admin.AccountStatement.show.button.delete'|trans }}</button>
          <form id="form_delete_{{ delete_form.vars.name  }}" action="{{ path('admin_billing_account-statement_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
          </form>
        </div>

        <div class="tab-pane fade" id="actions">
                    <h5>{{ "common.view.show.actions.nosoftdelete.title"|trans }}</h5>
          <p>
            {{ "common.view.show.actions.nosoftdelete.desc"|trans }}
          </p>
          <p>
            <form id="form_delete_{{ delete_form.vars.name  }}" action="{{ path('admin_billing_account-statement_delete', { 'id': entity.id }) }}" method="post">
              <input type="hidden" name="_method" value="DELETE" />
              {{ form_widget(delete_form) }}
              <button class="btn btn-danger">{{ "common.view.show.actions.nosoftdelete.button"|trans }}</button>
            </form>
          </p>
                  </div>
        
        
      </div>
    </div>
  </div>

</div>
{% endblock %}
