{% extends 'WobbleCodeAdminBundle::layout.html.twig' %}

{% block app_content_title %}
  {{ 'WobbleCodeBilling.view.Admin.PaymentWireTransferProfile.edit.title'|trans({'%id%': entity.id}) }}
{% endblock %}

{% block app_content_content %}

  <div class="row">
    <div class="col-sm-7">
      <p class="lead">{{ 'WobbleCodeBilling.view.Admin.PaymentWireTransferProfile.edit.subtitle'|trans({'%id%': entity.id}) }}</p>

      <form action="{{ path('admin_billing_payment-profile_wiretransfer_update', { 'id': entity.id, 'paymentProfile': paymentProfile.id  }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
      <hr/>
        <button class="btn btn-primary" type="submit">{{ 'WobbleCodeBilling.view.Admin.PaymentWireTransferProfile.edit.button.edit'|trans }}</button>
        <a class="btn btn-link" href="{{ path('admin_billing_payment-profile') }}">
          {{ 'WobbleCodeBilling.view.Admin.PaymentProfile.show.link.back'|trans }}
        </a>
      </form>

    </div>
  </div>

{% endblock %}
